// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  CLIENT
  COMPANY
}

enum ServiceCategory {
  AUTOMOBILES
  REAL_ESTATE
  OTHER
}

enum RequestStatus {
  NEW
  IN_PROGRESS
  COMPLETED
}

enum MessageType {
  TEXT
  IMAGE
  AUDIO
}

enum SubscriptionPlan {
  FREE
  BASIC
  PREMIUM
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

enum TransactionType {
  SUBSCRIPTION
  PAYMENT
  REFUND
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
}

enum InvoiceStatus {
  PAID
  PENDING
  OVERDUE
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  role          UserRole
  name          String?
  phone         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  services           Service[]
  clientRequests     Request[]  @relation("ClientRequests")
  companyRequests    Request[]  @relation("CompanyRequests")
  sentMessages       Message[]  @relation("SentMessages")
  receivedMessages   Message[]  @relation("ReceivedMessages")
  reviews            Review[]
  subscriptions      Subscription[]
  transactions       Transaction[]
  invoices           Invoice[]

  @@index([email])
  @@index([role])
}

model Service {
  id                String          @id @default(uuid())
  name              String
  category          ServiceCategory
  description       String          @db.Text
  priceFrom         Float
  priceTo           Float
  active            Boolean         @default(true)
  city              String?
  rating            Float?
  licensed          Boolean          @default(false)
  availabilityDays  Int?
  urgency           String?         // "low" | "medium" | "high"
  tags              String[]         @default([])
  customAttributes  Json?           // Record<string, string>
  companyId         String
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  company           User            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  images            ServiceImage[]
  requests          Request[]
  reviews           Review[]

  @@index([companyId])
  @@index([category])
  @@index([city])
  @@index([active])
}

model ServiceImage {
  id        String   @id @default(uuid())
  serviceId String
  url       String
  order     Int      @default(0)
  createdAt DateTime @default(now())

  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@index([serviceId])
}

model Request {
  id          String        @id @default(uuid())
  clientId    String
  serviceId   String
  companyId   String
  message     String        @db.Text
  status      RequestStatus @default(NEW)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  client      User          @relation("ClientRequests", fields: [clientId], references: [id], onDelete: Cascade)
  service     Service        @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  company     User          @relation("CompanyRequests", fields: [companyId], references: [id], onDelete: Cascade)
  messages    Message[]

  @@index([clientId])
  @@index([companyId])
  @@index([serviceId])
  @@index([status])
}

model Message {
  id          String      @id @default(uuid())
  requestId   String?
  senderId    String
  receiverId  String
  content     String      @db.Text
  type        MessageType @default(TEXT)
  imageUrl    String?
  audioUrl    String?
  read        Boolean     @default(false)
  createdAt   DateTime    @default(now())

  // Relations
  request     Request?    @relation(fields: [requestId], references: [id], onDelete: Cascade)
  sender      User        @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver    User        @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([requestId])
  @@index([senderId])
  @@index([receiverId])
  @@index([createdAt])
}

model Review {
  id        String   @id @default(uuid())
  clientId String
  serviceId String
  rating    Int      // 1-5
  comment   String   @db.Text
  createdAt DateTime @default(now())

  // Relations
  client    User     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@index([clientId])
  @@index([serviceId])
  @@index([rating])
}

model Subscription {
  id        String            @id @default(uuid())
  userId    String
  plan      SubscriptionPlan
  status    SubscriptionStatus
  startDate DateTime
  endDate   DateTime
  autoRenew Boolean           @default(true)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  // Relations
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model Transaction {
  id          String            @id @default(uuid())
  userId      String
  amount      Float
  currency    String            @default("KZT")
  type        TransactionType
  status      TransactionStatus
  description String            @db.Text
  paymentId   String?           // External payment provider ID
  invoiceId   String?            @unique
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoice     Invoice?          @relation(fields: [invoiceId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([type])
}

model Invoice {
  id        String        @id @default(uuid())
  userId    String
  amount    Float
  currency  String         @default("KZT")
  status    InvoiceStatus
  dueDate   DateTime
  items     Json          // Array<{ description: string; amount: number }>
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  // Relations
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transaction Transaction?

  @@index([userId])
  @@index([status])
}
